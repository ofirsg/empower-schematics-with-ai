{
  "$schema": "http://json-schema.org/schema",
  "$id": "NewToolGenerator",
  "title": "New Tool Generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name",
      "x-prompt": "What is the name of the tool?"
    },
    "description": {
      "type": "string",
      "description": "Description",
      "x-prompt": "Describe the purpose of the tool?"
    },
    "instructions": {
      "type": "string",
      "description": "Instructions",
      "x-prompt": "Add the instructions for the tool logic?"
    }
  },
  "required": ["name", "description", "instructions"]
}
